<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.ssafy.heritage.util.UtilsKt"/>
        <variable
            name="groupListResponse"
            type="com.ssafy.heritage.data.remote.response.GroupListResponse"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/iv_member_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                tools:text="설명"
                android:text="@{groupListResponse.groupName}"
                android:fontFamily="@font/apple_sd_gothic_neo_b"
                android:textSize="16sp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/iv_member_img"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/apple_sd_gothic_neo_m"
                android:text="@{String.valueOf(groupListResponse.groupStartDate)}"
                tools:text="0000.00.00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_group_name"/>
            <TextView
                android:id="@+id/header_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/apple_sd_gothic_neo_m"
                android:text=" ~ "
                tools:text=" ~ "
                app:layout_constraintTop_toTopOf="@id/tv_start_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_start_date"
                app:layout_constraintStart_toEndOf="@id/tv_start_date"/>
            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/apple_sd_gothic_neo_m"
                android:text="@{String.valueOf(groupListResponse.groupEndDate)}"
                tools:text="0000.00.00"
                app:layout_constraintStart_toEndOf="@id/header_from"
                app:layout_constraintTop_toTopOf="@id/tv_start_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_start_date"/>

