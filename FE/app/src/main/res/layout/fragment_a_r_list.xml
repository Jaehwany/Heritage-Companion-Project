<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ar.ARListFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/my_lank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="50dp"
            android:translationZ="6dp"
            android:backgroundTint="#FFFFEE"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp">

                <TextView
                    android:id="@+id/tv_my_lank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:text="나의 등수"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/diamond"
                    android:rotation="25"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_my_lank_img"
                    glide=""
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="4dp"
                    android:foregroundGravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/monster"
                    android:translationZ="2dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_my_lank_title" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/my_lank_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_my_lank_img"
                    app:layout_constraintStart_toEndOf="@id/iv_my_lank_img"
                    app:layout_constraintTop_toTopOf="@id/iv_my_lank_img">

                    <TextView
                        android:id="@+id/tv_my_lank_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/apple_sd_gothic_neo_b"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="잠만보" />

                    <TextView
                        android:id="@+id/tv_my_lank_count_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/apple_sd_gothic_neo_m"
                        android:text="총"
                        android:textColor="#8e8e93"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_my_lank_nickname" />

                    <TextView
                        android:id="@+id/tv_my_lank_count_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/apple_sd_gothic_neo_m"
                        android:text=""
                        android:textColor="#8e8e93"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_my_lank_count_all"
                        app:layout_constraintStart_toEndOf="@id/tv_my_lank_count_all"
                        app:layout_constraintTop_toTopOf="@id/tv_my_lank_count_all"
                        tools:text="7" />

                    <TextView
                        android:id="@+id/tv_my_lank_count_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/apple_sd_gothic_neo_m"
                        android:text="개"
                        android:textColor="#8e8e93"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_my_lank_count_all"
                        app:layout_constraintStart_toEndOf="@id/tv_my_lank_count_number"
                        app:layout_constraintTop_toTopOf="@id/tv_my_lank_count_all" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/my_lank_count"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/my_lank_count">

                    <TextView
                        android:id="@+id/tv_my_lank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/apple_sd_gothic_neo_b"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="48sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_my_lank_unit"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="7" />

                    <TextView
                        android:id="@+id/tv_my_lank_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/apple_sd_gothic_neo_m"
                        android:text="위"
                        android:textColor="#717174"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_ar_lank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="70dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/my_lank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_lank" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>